{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@database/*": ["database/*"],
      "@typeorm/*": ["typeorm/*"],
      "@utils/*": ["utils/*"],
      "@controllers/*": ["controllers/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
